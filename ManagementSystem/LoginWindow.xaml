<Window x:Class="OHSAdminPanel.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="750" Width="1350" WindowStartupLocation="CenterScreen"
        Background="#2C3E50" Foreground="White">
    <Window.Resources>
        <!-- Custom Button Style -->
        <Style TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Border Background="#34495E" CornerRadius="10" Padding="20" Margin="40">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
                
                <!-- Logo Image -->
                <Image Source="C:\daniyal\ManagementSystem\ManagementSystem\login.png" Width="200" Height="200" Margin="10,10,10,10"/>
                
                <Border Background="#2C3E50" BorderBrush="#1ABC9C" BorderThickness="2" CornerRadius="5" Margin="0,10">
                    <TextBox x:Name="UsernameTextBox" Width="280" Height="40" Text="Enter Username" FontSize="18" Foreground="Gray" 
                             GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus" 
                             Background="Transparent" BorderThickness="0" Padding="5"/>
                </Border>
                
                <Border Background="#2C3E50" BorderBrush="#1ABC9C" BorderThickness="2" CornerRadius="5" Margin="0,10">
                    <PasswordBox x:Name="PasswordBox" Width="280" Height="40" FontSize="18"
                                 Background="Transparent" BorderThickness="0" Padding="5"/>
                </Border>
                
                <Button Content="Login" Width="200" Height="50" Margin="0,20,0,0"
                        Click="btnLogin_Click" Background="#1ABC9C" FontSize="18"
                        Foreground="White" FontWeight="Bold" BorderThickness="0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    CornerRadius="6" Padding="5">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

            </StackPanel>
        </Border>
    </Grid>
</Window>
