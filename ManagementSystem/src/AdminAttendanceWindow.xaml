<Window x:Class="Employee_Management_System.AdminAttendanceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="All Attendance Records" Height="600" Width="1000" Background="#1A1A1A" Foreground="White" WindowStartupLocation="CenterScreen">
    
    <!-- Main Grid Layout -->
    <Grid Margin="10">
        <!-- Define Rows and Columns for Layout -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" /> <!-- Header Row -->
            <RowDefinition Height="*" />   <!-- Filter and DataGrid Row -->
            <RowDefinition Height="Auto" /> <!-- Footer Row -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" /> <!-- Full Width -->
        </Grid.ColumnDefinitions>

        <!-- Header Section -->
        <Border Grid.Row="0" Background="#333333" Padding="10" CornerRadius="5" Margin="0,0,0,10">
            <TextBlock Text="Attendance Records" FontSize="24" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" />
        </Border>

        <!-- Filter and DataGrid Section -->
        <StackPanel Grid.Row="1" Margin="0,0,0,10">
            <!-- Filters Section -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10" VerticalAlignment="Top">
                <!-- TreeView for Log Type Filtering -->
                <TreeView x:Name="LogTypeTreeView" Width="150" SelectedItemChanged="LogTypeTreeView_SelectedItemChanged" Margin="0,0,10,0">
                    <TreeViewItem Header="All Logs" IsExpanded="True">
                        <TreeViewItem Header="Clock In" />
                        <TreeViewItem Header="Clock Out" />
                        <TreeViewItem Header="Attendance" />
                    </TreeViewItem>
                </TreeView>

                <!-- Date Picker Filter -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0,0,0">
                    <TextBlock Text="Select Date:" VerticalAlignment="Center" Margin="0,0,10,0" Foreground="White" />
                    <DatePicker x:Name="DateFilterPicker" SelectedDateChanged="DateFilterPicker_SelectedDateChanged" Width="200" />
                </StackPanel>

                <!-- Reset Filters Button -->
                <Button Content="Reset Filters" Click="ClearFilter_Click" Margin="10,0,0,0" Background="#007ACC" Foreground="White" Width="120" />
            </StackPanel>

            <!-- DataGrid Section -->
            <Border Background="White" CornerRadius="5" Padding="5">
                <DataGrid x:Name="AttendanceGrid" AutoGenerateColumns="False"
                          Background="White" Foreground="Black"
                          GridLinesVisibility="Horizontal"
                          AlternatingRowBackground="#F5F5F5"
                          RowBackground="White"
                          BorderThickness="0"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Username" Binding="{Binding Username}" Width="*" />
                        <DataGridTextColumn Header="Date" Binding="{Binding Date}" Width="*" />
                        <DataGridTextColumn Header="Log Type" Binding="{Binding LogType}" Width="*" />
                        <DataGridTextColumn Header="Message" Binding="{Binding LogMessage}" Width="2*" />
                    </DataGrid.Columns>
                </DataGrid>
            </Border>
        </StackPanel>

        <!-- Footer Section -->
        <Border Grid.Row="2" Background="#333333" Padding="10" CornerRadius="5" Margin="0,10,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Refresh" Width="100" Height="30" Margin="5" Background="#007ACC" Foreground="White" />
                <Button Content="Close" Width="100" Height="30" Margin="5" Background="#D9534F" Foreground="White" Click="CloseButton_Click" />
            </StackPanel>
        </Border>
    </Grid>
</Window>