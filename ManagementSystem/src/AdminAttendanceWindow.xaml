<Window x:Class="Employee_Management_System.AdminAttendanceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="All Attendance Records" Height="750" Width="1300"
        Background="#121212" Foreground="White"
        WindowStartupLocation="CenterScreen">

    <!-- Button Style -->
    <Window.Resources>
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#4CA1AF"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" BlurRadius="8" ShadowDepth="2"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#5DB1BF"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <!-- Main Grid Layout -->
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3.5*"/>
            <ColumnDefinition Width="2.5*"/>
        </Grid.ColumnDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Grid.ColumnSpan="2" CornerRadius="8" Padding="12" Margin="0,0,0,10">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#2C3E50" Offset="0"/>
                    <GradientStop Color="#4CA1AF" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <TextBlock Text="ðŸ—‚  Attendance Records"
                       FontSize="26"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Foreground="White"/>
        </Border>

        <!-- Left: Attendance Grid -->
        <Border Grid.Row="1" Grid.Column="0"
                Background="#1E1E1E" BorderBrush="#4CA1AF" BorderThickness="0"
                CornerRadius="10" Padding="10">
            <DataGrid x:Name="AttendanceGrid"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      CanUserAddRows="False"
                      Background="#1E1E1E"
                      Foreground="White"
                      GridLinesVisibility="Horizontal"
                      AlternatingRowBackground="#2A2A2A"
                      RowBackground="#1E1E1E"
                      FontSize="14"
                      RowHeight="35"
                      HeadersVisibility="Column"
                      ColumnHeaderHeight="35">
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#4CA1AF"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Padding" Value="10,0"/>
                    </Style>
                </DataGrid.ColumnHeaderStyle>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Username" Binding="{Binding Username}" Width="*" />
                    <DataGridTextColumn Header="Date" Binding="{Binding Date}" Width="*" />
                    <DataGridTextColumn Header="Log Type" Binding="{Binding LogType}" Width="*" />
                    <DataGridTextColumn Header="Message" Binding="{Binding LogMessage}" Width="2*" />
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- Right: Filters and Buttons -->
        <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Vertical" Margin="20,0,0,0" VerticalAlignment="Stretch">
            <!-- Filters -->
            <GroupBox Header="Filter Options" Foreground="White" FontWeight="Bold" Padding="10" Margin="0,0,0,15"
                      BorderBrush="#4CA1AF" Background="#1E1E1E" BorderThickness="1" FontSize="14">
                <StackPanel Orientation="Vertical" Margin="0,5">
                    <!-- Log Type Filter -->
                    <TreeView x:Name="LogTypeTreeView"
                              SelectedItemChanged="LogTypeTreeView_SelectedItemChanged"
                              Background="#2C3E50"
                              Foreground="White"
                              BorderBrush="#4CA1AF"
                              BorderThickness="1"
                              Padding="10"
                              FontSize="14"
                              Height="150">
                        <TreeViewItem Header="All Logs" IsExpanded="True">
                            <TreeViewItem Header="Clock In"/>
                            <TreeViewItem Header="Clock Out"/>
                            <TreeViewItem Header="Attendance"/>
                        </TreeViewItem>
                    </TreeView>

                    <!-- Date Picker Filter -->
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,10,0,0">
                        <TextBlock Text="Select Date:" FontWeight="SemiBold" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <DatePicker x:Name="DateFilterPicker"
                                    SelectedDateChanged="DateFilterPicker_SelectedDateChanged"
                                    Width="200"
                                    Height="32"
                                    Background="#2C3E50"
                                    FontSize="14"
                                    BorderBrush="#4CA1AF"
                                    BorderThickness="1">
                            <DatePicker.Resources>
                                <Style TargetType="TextBox">
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="Background" Value="#2C3E50"/>
                                </Style>
                            </DatePicker.Resources>
                        </DatePicker>
                    </StackPanel>

                    <!-- Reset Button -->
                    <Grid Margin="0,15,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="1"
                                Content="Reset Filters"
                                Click="ClearFilter_Click"
                                Width="160"
                                Height="35"
                                Style="{StaticResource RoundedButtonStyle}"/>
                    </Grid>

                </StackPanel>
            </GroupBox>

            <!-- Action Buttons -->
            <GroupBox Header="Actions" Foreground="White" FontWeight="Bold"
                      Padding="10" Margin="0,0,0,0" Background="#1E1E1E"
                      BorderBrush="#4CA1AF" BorderThickness="1" FontSize="14">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="ðŸ”„ Refresh"
                            Width="120"
                            Height="35"
                            Style="{StaticResource RoundedButtonStyle}"/>
                    <Button Content="âŒ Close"
                            Width="120"
                            Height="35"
                            Style="{StaticResource RoundedButtonStyle}"
                            Background="#D9534F"
                            Click="CloseButton_Click"
                            Margin="10,0,0,0"/>
                </StackPanel>
            </GroupBox>
        </StackPanel>
    </Grid>
</Window>
