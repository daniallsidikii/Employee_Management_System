<Window x:Class="Employee_Management_System.AdminHealthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="All Health Records" Height="750" Width="1300"
        Background="#121212" Foreground="White" WindowStartupLocation="CenterScreen"
        Padding="15">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        
        <!-- Header -->
        <Border Grid.Row="0" Padding="15" CornerRadius="8" Margin="0,0,0,15">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#2C3E50" Offset="0"/>
                    <GradientStop Color="#4CA1AF" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <TextBlock Text="Employee Health Records" 
                       FontSize="26" FontWeight="Bold" 
                       HorizontalAlignment="Center" 
                       Foreground="White"/>
        </Border>

        <!-- DataGrid -->
        <Border Grid.Row="1" Background="#1A1A1A" CornerRadius="8" Padding="10" Margin="0,0,0,15">
            <DataGrid x:Name="HealthGrid"
                    AutoGenerateColumns="False"
                    Background="#1A1A1A"
                    Foreground="White"
                    GridLinesVisibility="Horizontal"
                    RowBackground="#1A1A1A"
                    AlternatingRowBackground="#2C2C2C"
                    HorizontalGridLinesBrush="#444444"
                    VerticalGridLinesBrush="#444444"
                    BorderBrush="#444444"
                    BorderThickness="1"
                    IsReadOnly="True"
                    SelectionMode="Single"
                    SelectionUnit="FullRow"
                    RowHeight="40"
                    Margin="0">

                <!-- Centered Header Style -->
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="Background" Value="#2C3E50"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="Padding" Value="10"/>
                    </Style>
                </DataGrid.ColumnHeaderStyle>

                <!-- Columns: Username, BloodPressure, Vision, LastCheckup -->
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Username" Binding="{Binding Username}" Width="*">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="TextAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn Header="Blood Pressure" Binding="{Binding BloodPressure}" Width="*">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="TextAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn Header="Vision" Binding="{Binding Vision}" Width="*">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="TextAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn Header="Last Checkup" Binding="{Binding LastCheckup, StringFormat='{}{0:MM/dd/yyyy}'}" Width="*">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="TextAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                </DataGrid.Columns>

                <!-- Row styling -->
                <DataGrid.Resources>
                    <Style TargetType="DataGridRow">
                        <Setter Property="Background" Value="#1A1A1A"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="BorderBrush" Value="#2C3E50"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                    </Style>
                </DataGrid.Resources>
            </DataGrid>




        </Border>

        <!-- Footer Buttons -->
        <Border Grid.Row="2" Background="#121212" Padding="15" CornerRadius="8">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0">
                
                <!-- Refresh Button -->
                <Button Content="Refresh" Width="120" Height="40" Margin="0,0,10,0"
                        Background="#2C3E50" Foreground="White" FontWeight="Bold"
                        BorderBrush="#2C3E50" BorderThickness="1" Click="Refresh_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" 
                                    BorderThickness="1" CornerRadius="20" Padding="10">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <!-- Close Button -->
                <Button Content="Close" Width="120" Height="40"
                        Background="#E74C3C" Foreground="White" FontWeight="Bold"
                        BorderBrush="#E74C3C" BorderThickness="1" Click="Close_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" 
                                    BorderThickness="1" CornerRadius="20" Padding="10">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>





