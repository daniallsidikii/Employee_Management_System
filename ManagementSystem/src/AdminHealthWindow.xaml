<Window x:Class="Employee_Management_System.AdminHealthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="All Health Records" Height="600" Width="1000"
        Background="#1A1A1A" Foreground="White" WindowStartupLocation="CenterScreen">
    
    <!-- Main Grid Layout -->
    <Grid Margin="10">
        <!-- Define Rows for Layout -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Header Row -->
            <RowDefinition Height="*"/>   <!-- DataGrid Row -->
            <RowDefinition Height="Auto"/> <!-- Footer Row -->
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Border Grid.Row="0" Background="#333333" Padding="10" CornerRadius="5" Margin="0,0,0,10">
            <TextBlock Text="Employee Health Records" FontSize="24" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" />
        </Border>

        <!-- DataGrid Section -->
        <Border Grid.Row="1" Background="White" CornerRadius="5" Padding="5">
            <DataGrid x:Name="HealthGrid" 
                      AutoGenerateColumns="True" 
                      Background="White" 
                      Foreground="Black" 
                      GridLinesVisibility="Horizontal" 
                      AlternatingRowBackground="#F5F5F5" 
                      RowBackground="White" 
                      HorizontalGridLinesBrush="#DDDDDD" 
                      VerticalGridLinesBrush="#DDDDDD" 
                      BorderThickness="0" 
                      CanUserAddRows="False" 
                      CanUserDeleteRows="False" 
                      IsReadOnly="True" />
        </Border>

        <!-- Footer Section -->
        <Border Grid.Row="2" Background="#333333" Padding="10" CornerRadius="5" Margin="0,10,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <!-- Refresh Button -->
                <Button Content="Refresh" Width="100" Height="30" Margin="5" Background="#007ACC" Foreground="White" Click="Refresh_Click" />
                <!-- Close Button -->
                <Button Content="Close" Width="100" Height="30" Margin="5" Background="#D9534F" Foreground="White" Click="Close_Click" />
            </StackPanel>
        </Border>
    </Grid>
</Window>
