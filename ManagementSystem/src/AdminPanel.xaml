<Window x:Class="Employee_Management_System.AdminPanel"
    

xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin Panel" Height="576" Width="1005" WindowStartupLocation="CenterScreen"
        Background="#1A1A1A" Foreground="White" WindowStyle="SingleBorderWindow" ResizeMode="CanResize">

    <Grid Margin="0,0,0,-6">
        <Border BorderThickness="2" Padding="10" CornerRadius="5" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Width="638">
                <TextBlock Text="Welcome to Admin Dashboard" 
                           FontSize="48" 
                           FontWeight="Bold" 
                           Foreground="White" Width="874" FontFamily="Times New Roman" Background="{Binding ElementName=lblAdmin, Mode=OneWay}"/>
                <TextBlock x:Name="lblAdmin"
                            FontSize="20"
                            FontWeight="SemiBold"
                            Foreground="White"
                            Margin="20,0,0,0"
                            VerticalAlignment="Center"
                            Text="" Height="333" Width="100"/>
                
            </StackPanel>
        </Border>

        <!-- Buttons placed outside the header border -->
        <Button Name="button1" 
                Content="Manage Employees" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                Width="170" 
                Height="98"
                Margin="336,163,0,0" 
                Click="Button1_Click" FontSize="18" FontFamily="Century" FontWeight="Bold"/>

        <Button Name="button2" 
                Content="Open Chat" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                Width="170" 
                Height="97" 
                Margin="797,329,0,0" 
                Click="Button2_Click" FontFamily="Century" FontWeight="Bold" FontSize="18"/>
        <Button Name="button3" 
                Content="Check Attendance" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                Width="170" 
                Height="97"
                Margin="567,164,0,0" FontFamily="Century" FontWeight="Bold" FontSize="18" 
        />
        <Button Name="button4" 
                Content="Health Records" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                Width="170" 
                Height="97"
                Margin="797,164,0,0" FontSize="18" FontFamily="Century" FontWeight="Bold" 
        />
        <Button Name="button5" 
                Content="Send Email" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                Width="170" 
                Height="97" 
                Margin="567,329,0,0" FontFamily="Century" FontSize="18" FontWeight="Bold" 
        />
    </Grid>
</Window>
