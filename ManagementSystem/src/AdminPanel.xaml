<Window x:Class="Employee_Management_System.AdminPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wpfAnimatedGif="http://wpfanimatedgif.codeplex.com"
        Title="Admin Panel" Height="750" Width="1300"
        WindowStartupLocation="CenterScreen"
        Background="White" Foreground="White"
        WindowStyle="SingleBorderWindow" ResizeMode="CanResize">

    <Window.Resources>
        <!-- Modern Rounded Button Style -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="20"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#4CA1AF"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="2"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="12"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#646f77"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Header with Correct Gradient -->
        <Border Height="120" VerticalAlignment="Top" CornerRadius="0,0,15,15">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#2C3E50" Offset="0"/>
                    <GradientStop Color="#4CA1AF" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>

            <DockPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Admin Dashboard"
                           FontSize="42"
                           FontWeight="Bold"
                           FontFamily="Segoe UI"
                           Foreground="White"
                           VerticalAlignment="Center"
                           Margin="10,0"/>
                <TextBlock x:Name="lblAdmin"
                           FontSize="18"
                           FontWeight="SemiBold"
                           Foreground="LightGray"
                           Margin="20,0,0,0"
                           VerticalAlignment="Center"
                           Text="(Controller)" />
                <Button Click="Logout_Click" Background="Transparent" BorderThickness="0" HorizontalAlignment="Right" Margin="500,0,0,0" Grid.Column="1">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="pack://siteoforigin:,,,/Assets/logout.png" Width="25" Height="25" Margin="0,0,5,0"/>
                        <TextBlock Text="Logout" Foreground="White" FontSize="16" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </DockPanel>
        </Border>

        <!-- Buttons Panel -->
        <WrapPanel Margin="60,200,100,40"
                Width="420" 
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Orientation="Horizontal"
                ItemWidth="200"
                ItemHeight="120">
    
                <Button Name="button1"
                        FontSize="16"
                        Content="Manage Employees"
                        Click="Button1_Click"
                        Style="{StaticResource ModernButtonStyle}" />

                <Button Name="button3"
                        FontSize="16"
                        Content="Check Attendance"
                        Click="Button3_Click"
                        Style="{StaticResource ModernButtonStyle}" />

                <Button Name="button4"
                        FontSize="16"
                        Content="Health Records"
                        Click="Button4_Click"
                        Style="{StaticResource ModernButtonStyle}" />

                <Button Name="button5"
                        FontSize="16"
                        Content="Send Email"
                        Click="Button5_Click"
                        Style="{StaticResource ModernButtonStyle}" />

                <Button Name="button2"
                        FontSize="16"
                        Content="Open Chat"
                        Click="Button2_Click"
                        Style="{StaticResource ModernButtonStyle}" />
                </WrapPanel>

        <Grid Width="500" Height="475" Margin="0,150,500,20" HorizontalAlignment="Center">
        <Rectangle RadiusX="30" RadiusY="30" Width="500" Height="475">
                <Rectangle.Fill>
                <VisualBrush Stretch="Fill">
                        <VisualBrush.Visual>
                        <Viewbox Width="500" Height="475">
                                <Image x:Name="myGif"
                                Width="500" Height="475"
                                wpfAnimatedGif:ImageBehavior.AnimatedSource="pack://siteoforigin:,,,/Assets/AdminPannel.gif"/>
                        </Viewbox>
                        </VisualBrush.Visual>
                </VisualBrush>
                </Rectangle.Fill>
        </Rectangle>
        </Grid>

    </Grid>
</Window>

