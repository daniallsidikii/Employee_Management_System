<Window x:Class="Employee_Management_System.AdminPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin Panel" Height="750" Width="1300" WindowStartupLocation="CenterScreen"
        Background="#1A1A1A" Foreground="White" WindowStyle="SingleBorderWindow" ResizeMode="CanResize">
    
    <Grid>
        <Border BorderBrush="#34495E" BorderThickness="2" Padding="10" CornerRadius="5" Background="#34495E" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="Welcome to Admin Dashboard" 
                           FontSize="28" 
                           FontWeight="Bold" 
                           Foreground="White" 
                           HorizontalAlignment="Center"/>
                <TextBlock x:Name="lblAdmin"
                            FontSize="20"
                            FontWeight="SemiBold"
                            Foreground="White"
                            Margin="20,0,0,0"
                            VerticalAlignment="Center"
                            Text=""/>
            </StackPanel>
        </Border>
        
        <!-- Buttons placed outside the header border -->
        <Button Name="button1" 
                Content="Manage Employees" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                Width="150" 
                Height="50" 
                Margin="50,120,0,0" 
                Click="Button1_Click"/>
        
        <Button Name="button2" 
                Content="Open Chat" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                Width="150" 
                Height="50" 
                Margin="220,120,0,0" 
                Click="Button2_Click"/>
    </Grid>
</Window>