<Window x:Class="Employee_Management_System.EmployeeDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Employee Dashboard"
        Height="650"
        Width="1350"
        WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanResize"
        Background="#F5F5F5">

    <!-- Main Grid Layout -->
    <Grid>
        <!-- Define two columns: Sidebar and Main Content -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/> <!-- Sidebar width -->
            <ColumnDefinition Width="*"/>  <!-- Main content takes remaining space -->
        </Grid.ColumnDefinitions>

        <!-- Sidebar Panel -->
        <StackPanel Grid.Column="0" Background="#2C3E50" Width="250" VerticalAlignment="Stretch" Margin="10">
            <!-- Dashboard Title -->
            <TextBlock Text="Employee Dashboard" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       Foreground="White" 
                       Margin="10,20,10,20" 
                       HorizontalAlignment="Center"/>

            <!-- Sidebar Buttons -->
            <Button Content="Message" 
                    Margin="5" 
                    Height="40" 
                    Background="#34495E" 
                    Foreground="White" 
                    FontSize="14" 
                    Click="message_Click"/>

            <Button Content="Mark Attendance" 
                    Margin="5" 
                    Height="40" 
                    Background="#34495E" 
                    Foreground="White" 
                    FontSize="14" 
                    Click="MarkAttendance_Click"/>
            <Button Content="View Attendance Logs" 
                    Margin="5" 
                    Height="40" 
                    Background="#34495E" 
                    Foreground="White" 
                    FontSize="14" 
                    Click="ViewAttendanceLogs_Click"/>
            <Button Content="Health Records" 
                    Margin="5" 
                    Height="40" 
                    Background="#34495E" 
                    Foreground="White" 
                    FontSize="14" 
                    Click="OpenHealthRecords_Click"/>
            <Button Content="OHS Survey" 
                    Margin="5" 
                    Height="40" 
                    Background="#3498DB" 
                    Foreground="White" 
                    FontSize="14" 
                    Click="OpenOHSSurvey_Click"/>
            <Button Content="Logout" 
                    Margin="5" 
                    Height="40" 
                    Background="#E74C3C" 
                    Foreground="White" 
                    FontSize="14" 
                    Click="Logout_Click"/>
        </StackPanel>

        <!-- Main Content Area -->
        <Grid Grid.Column="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Header -->
                <RowDefinition Height="*"/>   <!-- Main Content -->
            </Grid.RowDefinitions>

            <!-- Welcome Header Section -->
            <Border Grid.Row="0" BorderBrush="#34495E" BorderThickness="2" Padding="10" CornerRadius="5" Background="#34495E" Margin="0,0,0,10">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="Welcome to Employee Dashboard" 
                               FontSize="28" 
                               FontWeight="Bold" 
                               Foreground="White" 
                               HorizontalAlignment="Center"/>
                    <TextBlock x:Name="txtClock" 
                               FontSize="28" 
                               FontWeight="Bold" 
                               Foreground="White" 
                               HorizontalAlignment="Right" 
                               Margin="30,0,0,0"/>
                </StackPanel>
            </Border>

            <!-- Main Content Section -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/> <!-- To-Do List -->
                    <ColumnDefinition Width="300"/> <!-- Attendance Status -->
                </Grid.ColumnDefinitions>

                <!-- To-Do List Section -->
                <GroupBox Header="ðŸ“ To-Do List" FontSize="16" Padding="10" Margin="10" Background="White" BorderBrush="#34495E" BorderThickness="2">
                    <StackPanel>
                        <!-- List of tasks -->
                        <ListBox Name="lstToDo" Height="200" Margin="5" Background="#ECF0F1" BorderBrush="#BDC3C7" BorderThickness="1"/>
                        
                        <!-- Add Task Section -->
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <TextBox Name="txtNewTask" Width="200" Margin="5" ToolTip="Enter a task..." Background="#FFFFFF" BorderBrush="#BDC3C7" BorderThickness="1"/>
                            <Button Content="âž• Add" 
                                    Width="80" 
                                    Click="AddTask_Click" 
                                    Background="#27AE60" 
                                    Foreground="White" 
                                    FontWeight="Bold"/>
                        </StackPanel>

                        <!-- Remove and Clear Buttons -->
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <Button Content="âŒ Remove" 
                                    Width="100" 
                                    Click="RemoveTask_Click" 
                                    Background="#E74C3C" 
                                    Foreground="White" 
                                    FontWeight="Bold"/>
                            <Button Content="ðŸ—‘ Clear All" 
                                    Width="100" 
                                    Click="ClearTasks_Click" 
                                    Background="#95A5A6" 
                                    Foreground="White" 
                                    FontWeight="Bold"/>
                        </StackPanel>

                        <!-- Add Task Section with Due Date and Priority -->
                        <StackPanel Orientation="Vertical" Margin="5">
                            <!-- Due Date Input -->
                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                <Label Content="Due Date:" VerticalAlignment="Center" Margin="5,0"/>
                                <DatePicker Name="txtDueDate" Width="150" Margin="5"/>
                            </StackPanel>

                            <!-- Priority Input -->
                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                <Label Content="Priority:" VerticalAlignment="Center" Margin="5,0"/>
                                <ComboBox Name="txtPriority" Width="150" Margin="5">
                                    <ComboBoxItem Content="Low"/>
                                    <ComboBoxItem Content="Medium"/>
                                    <ComboBoxItem Content="High"/>
                                </ComboBox>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>

                <!-- Attendance Status Section -->
                <StackPanel Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10">
                    <TextBlock Text="Attendance Status:" 
                               FontSize="18" 
                               FontWeight="Bold" 
                               Margin="0,0,0,10"
                               Foreground="Black"
                               TextAlignment="Center"/>

                    <!-- Fixed Size Container for Status Labels -->
                    <Border Width="250" Height="70" Background="Transparent">
                        <StackPanel>
                            <!-- Clock-In Status Label -->
                            <Label x:Name="lblClockInStatus" 
                                   Content="" 
                                   FontSize="16" 
                                   Foreground="Black" 
                                   Background="Transparent" 
                                   HorizontalAlignment="Center"
                                   HorizontalContentAlignment="Center"
                                   FontWeight="Bold"
                                   Width="250"/>

                            <!-- Clock-Out Status Label -->
                            <Label x:Name="lblClockOutStatus" 
                                   Content="" 
                                   FontSize="14" 
                                   Foreground="Black" 
                                   Background="Transparent" 
                                   HorizontalAlignment="Center"
                                   HorizontalContentAlignment="Center"
                                   FontWeight="Bold"
                                   Width="400"
                                   Height="50"
                                   Padding="5"
                                   MaxWidth="250"
                                   MaxHeight="50"/>
                        </StackPanel>
                    </Border>

                    <!-- Clock In Button -->
                    <Button Content="Clock In" 
                            Width="160" 
                            Height="45" 
                            Background="LightGreen" 
                            Foreground="Black" 
                            FontSize="14" 
                            FontWeight="Bold" 
                            Click="ClockIn_Click"/>

                    <!-- Clock Out Button -->
                    <Button Content="Clock Out" 
                            Width="160" 
                            Height="45" 
                            Background="LightCoral" 
                            Foreground="Black" 
                            FontSize="14" 
                            FontWeight="Bold" 
                            Margin="0,10,0,0" 
                            Click="ClockOut_Click"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>