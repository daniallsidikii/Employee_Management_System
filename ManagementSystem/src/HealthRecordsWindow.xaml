<Window x:Class="Employee_Management_System.HealthRecordsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Health Records"
        Height="400"
        Width="500"
        Background="#F4F7FC"
        WindowStartupLocation="CenterScreen"
        FontFamily="Segoe UI"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <!-- Define rows for layout -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Title -->
            <RowDefinition Height="Auto"/> <!-- Blood Pressure -->
            <RowDefinition Height="Auto"/> <!-- Vision -->
            <RowDefinition Height="Auto"/> <!-- Last Checkup -->
            <RowDefinition Height="Auto"/> <!-- Buttons -->
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Text="Health Records" 
                   FontSize="24" 
                   FontWeight="Bold"
                   Foreground="#2E86C1" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,20"/>

        <!-- Blood Pressure -->
        <TextBlock Text="Blood Pressure:" 
                   FontSize="14" 
                   Grid.Row="1" 
                   VerticalAlignment="Center"/>
        <TextBox x:Name="txtBloodPressure" 
                 Grid.Row="1" 
                 Margin="150,0,0,0" 
                 Width="200"
                 materialDesign:HintAssist.Hint="Enter Blood Pressure" 
                 materialDesign:TextFieldAssist.HasClearButton="True" />

        <!-- Vision -->
        <TextBlock Text="Vision:" 
                   FontSize="14" 
                   Grid.Row="2" 
                   VerticalAlignment="Center"/>
        <TextBox x:Name="txtVision" 
                 Grid.Row="2" 
                 Margin="150,0,0,0" 
                 Width="200"
                 materialDesign:HintAssist.Hint="Enter Vision"
                 materialDesign:TextFieldAssist.HasClearButton="True" />

        <!-- Last Checkup Date -->
        <TextBlock Text="Last Checkup:" 
                   FontSize="14" 
                   Grid.Row="3" 
                   VerticalAlignment="Center"/>
        <DatePicker x:Name="dpLastCheckup" 
                    Grid.Row="3" 
                    Margin="150,0,0,0" 
                    Width="200"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="4" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    Margin="0,20,0,0">
            <Button Content="Save" 
                    Width="100" 
                    Margin="5"
                    Click="SaveHealthRecords_Click"
                    Background="#2ECC71" 
                    Foreground="White" 
                    FontWeight="Bold"/>
            <Button Content="Load" 
                    Width="100" 
                    Margin="5"
                    Click="LoadHealthRecords_Click"
                    Background="#3498DB" 
                    Foreground="White" 
                    FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>