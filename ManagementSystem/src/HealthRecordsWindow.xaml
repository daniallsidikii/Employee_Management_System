<Window x:Class="Employee_Management_System.HealthRecordsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Health Records" Height="350" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Blood Pressure" Margin="0,10,0,5"/>
            <TextBox x:Name="txtBloodPressure" Width="200" Margin="0,0,0,10"/>

            <TextBlock Text="Vision" Margin="0,10,0,5"/>
            <TextBox x:Name="txtVision" Width="200" Margin="0,0,0,10"/>

            <TextBlock Text="Last Checkup Date" Margin="0,10,0,5"/>
            <DatePicker x:Name="dpLastCheckup" Width="200" Margin="0,0,0,10"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Button x:Name="btnSave" Content="Save Health Record" Width="120" Height="30" Click="SaveHealthRecords_Click" Margin="0,0,10,0"/>
                <Button x:Name="btnLoad" Content="Load Health Record" Width="120" Height="30" Click="LoadHealthRecords_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
