<Window x:Class="Employee_Management_System.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Employee Management System" Height="750" Width="1300" WindowStartupLocation="CenterScreen" Background="#555555">
    <Window.Resources>
        <!-- Style for TextBox with Rounded Corners -->
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#B6B6B4"/>
            <Setter Property="Foreground" Value="Gray"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Width" Value="485"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="10" 
                                BorderBrush="White" 
                                BorderThickness="1">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                          Margin="{TemplateBinding Padding}" 
                                          VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#A0A0A0"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style for Button with Rounded Corners -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="Green"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Width" Value="150"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="10" 
                                BorderBrush="White" 
                                BorderThickness="1">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2E8B57"/>
                    <Setter Property="Cursor" Value="Hand"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <StackPanel Background="#9A7E6F" Orientation="Horizontal" Height="70">
            <Border Background="#A5BFCC" Width="300" Height="50" Margin="20,10,0,10" CornerRadius="10">
                <TextBlock Text="Admin Panel" VerticalAlignment="Center" Margin="60,0,60,0" FontSize="26" FontWeight="Bold" Foreground="Black" FontFamily="Times New Roman"/>
            </Border>
            <Button Click="Logout_Click" Background="Red" 
                    Width="55" Height="45" Margin="890,5,0,5" HorizontalAlignment="Right">
                <Image Source="pack://siteoforigin:,,,/Assets/logout.png" Width="30" Height="30"/>
            </Button>
        </StackPanel>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <!-- Employee Input Fields -->
            <StackPanel Grid.Column="0" VerticalAlignment="Top" Margin="0,0,0,10">
                <Image Source="pack://siteoforigin:,,,/Assets/cred.png" Width="200" Height="200" HorizontalAlignment="Center"/>

                <TextBox x:Name="EmployeeIdTextBox" Text="Enter Employee ID" FontSize="18" FontWeight="ExtraLight" Foreground="Black"
                         GotFocus="EmployeeIdTextBox_GotFocus" LostFocus="EmployeeIdTextBox_LostFocus" Height="45" Width="400" Margin="20,10,70,0"/>
                <TextBox x:Name="NameTextBox" Text="Enter Name" FontSize="18" FontWeight="ExtraLight" Foreground="Black"
                         GotFocus="NameTextBox_GotFocus" LostFocus="NameTextBox_LostFocus" Height="45" Width="400" Margin="20,10,70,0"/>
                <TextBox x:Name="EmailTextBox" Text="Enter Email" FontSize="18" FontWeight="ExtraLight" Foreground="Black"
                         GotFocus="EmailTextBox_GotFocus" LostFocus="EmailTextBox_LostFocus" Height="45" Width="400" Margin="20,10,70,0"/>
                <TextBox x:Name="SalaryTextBox" Text="Enter Salary" FontSize="18" FontWeight="ExtraLight" Foreground="Black"
                         GotFocus="SalaryTextBox_GotFocus" LostFocus="SalaryTextBox_LostFocus" Height="45" Width="400" Margin="20,10,70,0"/>
                <TextBox x:Name="DesignationTextBox" Text="Enter Designation" FontSize="18" FontWeight="ExtraLight" Foreground="Black"
                         GotFocus="DesignationTextBox_GotFocus" LostFocus="DesignationTextBox_LostFocus" Height="45" Width="400" Margin="20,10,70,0"/>
                <Button Content="Add Employee" Click="AddEmployeeButton_Click" Margin="5, 20, 80, 0" Height="50" Width="200" FontSize="18" FontWeight="Normal" Foreground="Black" Background="#D5C7A3"/>
            </StackPanel>

            <!-- Employee List -->
            <StackPanel Grid.Column="1" VerticalAlignment="Top" Margin="0, 0, 0, 0" >
                <Border Background="#EFEFEF" CornerRadius="10" Padding="10" BorderBrush="Gray" BorderThickness="1">
                    <ListView x:Name="EmployeeListView" ItemsSource="{Binding Employees}" Height="500">
                        <ListView.Resources>
                            <Style TargetType="GridViewColumnHeader">
                                <Setter Property="Background" Value="#D5C7A3"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="FontSize" Value="16"/>
                                <Setter Property="Foreground" Value="Black"/>
                                <Setter Property="Padding" Value="10"/>
                            </Style>
                            <Style TargetType="ListViewItem">
                                <Setter Property="Height" Value="45"/>
                                <Setter Property="FontSize" Value="14"/>
                                <Setter Property="Foreground" Value="Black"/>
                                <Setter Property="Padding" Value="5"/>
                                <Setter Property="Background" Value="#EDE8DC"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#E6E6E6"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#D5C7A3"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ListView.Resources>
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="ID" DisplayMemberBinding="{Binding Id}" Width="50"/>
                                <GridViewColumn Header="Emp ID" DisplayMemberBinding="{Binding EmployeeId}" Width="90"/>
                                <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}" Width="160"/>
                                <GridViewColumn Header="Email" DisplayMemberBinding="{Binding Email}" Width="195"/>
                                <GridViewColumn Header="Salary" DisplayMemberBinding="{Binding Salary}" Width="110"/>
                                <GridViewColumn Header="Designation" DisplayMemberBinding="{Binding Designation}" Width="180"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Border>
                
                <!-- Edit & Delete Buttons -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                    <Button Content="Edit" Click="EditButton_Click" Height="50" Width="200" FontSize="18" FontWeight="Normal" Foreground="Black" Background="#D5C7A3" Margin="10, 20, 10, 0"/>
                    <Button Content="Delete" Click="DeleteButton_Click" Height="50" Width="200" FontSize="18" FontWeight="Normal" Foreground="Black" Background="#D5C7A3" Margin="10, 20, 10, 0"/>
                </StackPanel>
            </StackPanel>


        </Grid>
    </Grid>
</Window>