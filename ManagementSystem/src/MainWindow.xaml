<Window x:Class="Employee_Management_System.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Employee Management System" Height="750" Width="1300" WindowStartupLocation="CenterScreen" Background="#121212">

    <Window.Resources>
        <!-- Enhanced Style for TextBox -->
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Width" Value="485"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="12"
                                BorderBrush="#ccc"
                                BorderThickness="1">
                            <ScrollViewer x:Name="PART_ContentHost"
                                          Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#f9f9f9"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Enhanced Style for Button -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="#4CA1AF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="Width" Value="170"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="14"
                                BorderBrush="#4CA1AF"
                                BorderThickness="1">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#5FB2C9"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Height="120" VerticalAlignment="Top" CornerRadius="0,0,15,15">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#2C3E50" Offset="0"/>
                    <GradientStop Color="#4CA1AF" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="0">
                    <TextBlock Text="Employee Management"
                               FontSize="42"
                               FontWeight="Bold"
                               FontFamily="Segoe UI"
                               Foreground="White"
                               VerticalAlignment="Center"/>
                    <TextBlock x:Name="lblAdmin"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="#D3D3D3"
                               Margin="20,0,0,0"
                               VerticalAlignment="Center"
                               Text="(Controller)" />
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel -->
            <StackPanel Grid.Column="0" VerticalAlignment="Top" Margin="0,0,20,0">
                <Image Source="pack://siteoforigin:,,,/Assets/cred.png" Width="130" Height="180" HorizontalAlignment="Center"/>

                <TextBox x:Name="EmployeeIdTextBox" Text="Enter Employee ID" GotFocus="EmployeeIdTextBox_GotFocus" LostFocus="EmployeeIdTextBox_LostFocus" Margin="0,0,0,10" Width="350"/>
                <TextBox x:Name="NameTextBox" Text="Enter Name" GotFocus="NameTextBox_GotFocus" LostFocus="NameTextBox_LostFocus" Margin="0,0,0,10" Width="350"/>
                <TextBox x:Name="EmailTextBox" Text="Enter Email" GotFocus="EmailTextBox_GotFocus" LostFocus="EmailTextBox_LostFocus" Margin="0,0,0,10" Width="350"/>
                <TextBox x:Name="SalaryTextBox" Text="Enter Salary" GotFocus="SalaryTextBox_GotFocus" LostFocus="SalaryTextBox_LostFocus" Margin="0,0,0,10" Width="350"/>
                <TextBox x:Name="DesignationTextBox" Text="Enter Designation" GotFocus="DesignationTextBox_GotFocus" LostFocus="DesignationTextBox_LostFocus" Margin="0,0,0,20" Width="350"/>

                <Button Content="Add Employee" Click="AddEmployeeButton_Click" Background="#4CA1AF" Foreground="White"/>
            </StackPanel>

            <!-- Right Panel -->
            <StackPanel Grid.Column="1">
                <Border Background="White" CornerRadius="10" Padding="10" BorderBrush="#DDD" BorderThickness="1" Margin="0,0,0,10">
                    <ListView x:Name="EmployeeListView" ItemsSource="{Binding Employees}" Height="430">
                        <ListView.Resources>
                            <Style TargetType="GridViewColumnHeader">
                                <Setter Property="Background" Value="#ECEFF1"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="FontSize" Value="15"/>
                                <Setter Property="Foreground" Value="#333"/>
                            </Style>
                            <Style TargetType="ListViewItem">
                                <Setter Property="FontSize" Value="14"/>
                                <Setter Property="Background" Value="#FAFAFA"/>
                                <Setter Property="Foreground" Value="#111"/>
                                <Setter Property="Margin" Value="2"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#c8d0dc"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="#adb9cb"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ListView.Resources>
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="ID" DisplayMemberBinding="{Binding Id}" Width="50"/>
                                <GridViewColumn Header="Emp ID" DisplayMemberBinding="{Binding EmployeeId}" Width="90"/>
                                <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}" Width="160"/>
                                <GridViewColumn Header="Email" DisplayMemberBinding="{Binding Email}" Width="195"/>
                                <GridViewColumn Header="Salary" DisplayMemberBinding="{Binding Salary}" Width="110"/>
                                <GridViewColumn Header="Designation" DisplayMemberBinding="{Binding Designation}" Width="180"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Border>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                    <Button Content="Edit" Click="EditButton_Click" Background="#4CA1AF" Margin="0,0,10,0"/>
                    <Button Content="Delete" Click="DeleteButton_Click" Background="#EF5350"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
