<Window x:Class="Employee_Management_System.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Employee Management System" Height="500" Width="700">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <StackPanel Background="#2E86C1" Orientation="Horizontal" Height="50">
            <TextBlock Text="Employee Management System" Foreground="White" FontSize="18"
                       VerticalAlignment="Center" Margin="10,0,0,0"/>
            <TextBlock x:Name="txtClock" Foreground="White" FontSize="16" Margin="10,0,10,0" VerticalAlignment="Center"/>
            <Button Content="Logout" Click="Logout_Click" Background="Red" Foreground="White"
                    Width="80" Margin="10,5,10,5" HorizontalAlignment="Right"/>
        </StackPanel>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <!-- Employee Input Fields -->
            <StackPanel Grid.Column="0" VerticalAlignment="Top">
                <TextBox x:Name="EmployeeIdTextBox" Text="Enter Employee ID" Foreground="Gray"
                         GotFocus="EmployeeIdTextBox_GotFocus" LostFocus="EmployeeIdTextBox_LostFocus"
                         Margin="5" Padding="5"/>

                <TextBox x:Name="NameTextBox" Text="Enter Name" Foreground="Gray"
                         GotFocus="NameTextBox_GotFocus" LostFocus="NameTextBox_LostFocus"
                         Margin="5" Padding="5"/>

                <TextBox x:Name="EmailTextBox" Text="Enter Email" Foreground="Gray"
                         GotFocus="EmailTextBox_GotFocus" LostFocus="EmailTextBox_LostFocus"
                         Margin="5" Padding="5"/>

                <TextBox x:Name="SalaryTextBox" Text="Enter Salary" Foreground="Gray"
                         GotFocus="SalaryTextBox_GotFocus" LostFocus="SalaryTextBox_LostFocus"
                         Margin="5" Padding="5"/>

                <TextBox x:Name="DesignationTextBox" Text="Enter Designation" Foreground="Gray"
                         GotFocus="DesignationTextBox_GotFocus" LostFocus="DesignationTextBox_LostFocus"
                         Margin="5" Padding="5"/>

                <Button Content="Add Employee" Click="AddEmployeeButton_Click" Background="Green"
                        Foreground="White" Margin="5" Padding="5"/>
            </StackPanel>

            <!-- Employee List -->
            <StackPanel Grid.Column="1" VerticalAlignment="Top">
                <ListView x:Name="EmployeeListView" ItemsSource="{Binding Employees}" Height="250">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="ID" DisplayMemberBinding="{Binding Id}" Width="50"/>
                            <GridViewColumn Header="Employee ID" DisplayMemberBinding="{Binding EmployeeId}" Width="100"/>
                            <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}" Width="150"/>
                            <GridViewColumn Header="Email" DisplayMemberBinding="{Binding Email}" Width="150"/>
                            <GridViewColumn Header="Salary" DisplayMemberBinding="{Binding Salary}" Width="100"/>
                            <GridViewColumn Header="Designation" DisplayMemberBinding="{Binding Designation}" Width="150"/>
                        </GridView>
                    </ListView.View>
                </ListView>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="Edit" Click="EditButton_Click" Background="Orange"
                            Foreground="White" Margin="5" Padding="5"/>
                    <Button Content="Delete" Click="DeleteButton_Click" Background="Red"
                            Foreground="White" Margin="5" Padding="5"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</Window>