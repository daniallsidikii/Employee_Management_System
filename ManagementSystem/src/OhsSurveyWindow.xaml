<Window x:Class="Employee_Management_System.OhsSurveyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="OHS Survey" 
        Height="600" 
        Width="600" 
        WindowStartupLocation="CenterScreen"
        Background="White">

    <Grid Margin="10">
        <!-- Add ScrollViewer for scrollability -->
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel>
                <!-- Survey Title -->
                <TextBlock Text="Occupational Health and Safety (OHS) Survey"
                           FontSize="20" 
                           FontWeight="Bold" 
                           Foreground="#2C3E50" 
                           HorizontalAlignment="Center" 
                           Margin="0,10"/>

                <!-- Question 1 -->
                <TextBlock Text="1. Have you experienced any workplace hazards recently?" 
                           FontSize="14" 
                           Margin="5"/>
                <ComboBox Name="cmbHazards" Margin="5">
                    <ComboBoxItem Content="Yes"/>
                    <ComboBoxItem Content="No"/>
                </ComboBox>

                <!-- Question 2 -->
                <TextBlock Text="2. How often do you take breaks?" 
                           FontSize="14" 
                           Margin="5"/>
                <ComboBox Name="cmbBreaks" Margin="5">
                    <ComboBoxItem Content="Every hour"/>
                    <ComboBoxItem Content="Every 2 hours"/>
                    <ComboBoxItem Content="Rarely"/>
                </ComboBox>

                <!-- Question 3 -->
                <TextBlock Text="3. Do you feel comfortable in your workspace?" 
                           FontSize="14" 
                           Margin="5"/>
                <ComboBox Name="cmbComfort" Margin="5">
                    <ComboBoxItem Content="Yes"/>
                    <ComboBoxItem Content="No"/>
                </ComboBox>

                <!-- Question 4 -->
                <TextBlock Text="4. Have you faced any ergonomic issues (e.g., back pain, wrist pain)?" 
                           FontSize="14" 
                           Margin="5"/>
                <ComboBox Name="cmbErgonomics" Margin="5">
                    <ComboBoxItem Content="Yes"/>
                    <ComboBoxItem Content="No"/>
                </ComboBox>

                <!-- Question 5 -->
                <TextBlock Text="5. Do you feel your workplace provides adequate safety measures?" 
                           FontSize="14" 
                           Margin="5"/>
                <ComboBox Name="cmbSafety" Margin="5">
                    <ComboBoxItem Content="Yes"/>
                    <ComboBoxItem Content="No"/>
                </ComboBox>

                <!-- Question 6 -->
                <TextBlock Text="6. Have you received proper training on workplace safety?" 
                           FontSize="14" 
                           Margin="5"/>
                <ComboBox Name="cmbTraining" Margin="5">
                    <ComboBoxItem Content="Yes"/>
                    <ComboBoxItem Content="No"/>
                </ComboBox>

                <!-- Question 7 -->
                <TextBlock Text="7. Do you experience stress or mental strain at work?" 
                           FontSize="14" 
                           Margin="5"/>
                <ComboBox Name="cmbStress" Margin="5">
                    <ComboBoxItem Content="Often"/>
                    <ComboBoxItem Content="Sometimes"/>
                    <ComboBoxItem Content="Rarely"/>
                </ComboBox>

                <!-- Question 8 -->
                <TextBlock Text="8. Are emergency exits and first aid kits easily accessible?" 
                           FontSize="14" 
                           Margin="5"/>
                <ComboBox Name="cmbEmergency" Margin="5">
                    <ComboBoxItem Content="Yes"/>
                    <ComboBoxItem Content="No"/>
                </ComboBox>

                <!-- Question 9 -->
                <TextBlock Text="9. Do you have any concerns regarding workplace hygiene?" 
                           FontSize="14" 
                           Margin="5"/>
                <ComboBox Name="cmbHygiene" Margin="5">
                    <ComboBoxItem Content="Yes"/>
                    <ComboBoxItem Content="No"/>
                </ComboBox>

                <!-- Question 10 -->
                <TextBlock Text="10. Any suggestions to improve workplace safety?" 
                           FontSize="14" 
                           Margin="5"/>
                <TextBox Name="txtSuggestions" Margin="5" Height="60" TextWrapping="Wrap"/>

                <!-- Submit Button -->
                <Button Content="Submit" 
                        Width="100" 
                        Height="40" 
                        Background="#27AE60" 
                        Foreground="White" 
                        FontSize="14" 
                        Click="SubmitSurvey_Click"
                        Margin="10,20,10,0"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>